<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/lightcommonaccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/lightcommonaccent</item>
        <item name="android:windowBackground">@color/lightcommonaccent</item>
        <item name="android:actionBarStyle">@style/MyActionBarDefaultTheme</item>
    </style>

    <!--Light Theme-->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorthemeLightPrimary</item>
        <item name="colorPrimaryDark">@color/colorthemeLightDark</item>
        <item name="colorAccent">@color/colorthemeLightAccent</item>
        <item name="android:statusBarColor">@color/lightcommonaccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/lightcommonaccent</item>
        <item name="android:windowBackground">@color/lightcommonaccent</item>
        <item name="android:actionBarStyle">@style/MyActionBarLightTheme</item>
    </style>

    <!--Dark Theme-->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorthemeDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorthemeDarkDark</item>
        <item name="colorAccent">@color/colorthemeDarkAccent</item>
        <item name="android:statusBarColor">@color/darkcommonaccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/darkcommonaccent</item>
        <item name="android:windowBackground">@color/darkcommonaccent</item>
        <item name="android:actionBarStyle">@style/MyActionBarDarkTheme</item>
    </style>

    <style name="MyActionBarDefaultTheme"  parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MyActionBarLightTheme"  parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorthemeLightPrimary</item>
    </style>

    <style name="MyActionBarDarkTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorthemeDarkPrimary</item>
    </style>
    <!-- Text styles -->
    <style name="SplashText">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceHeading" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAQIScale">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>

        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>


    <style name="TextAQIScale2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <!--Animations-->

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_fade</item>
        <item name="android:windowExitAnimation">@anim/slide_down_fade</item>
    </style>

</resources>
