<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:background="@drawable/circle_shape"
                        android:id="@+id/txtvw_sno"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:text="1"/>


                    <TextView
                        android:id="@+id/txtvw_location"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="Monday" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtvw_locationinfo"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_height="wrap_content"
                    android:text="Linz, 4040" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_thermometer"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="10" />

                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_humidity"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="80" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/view2"
                android:layout_width="1dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />

            <LinearLayout
                android:background="@color/green"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtairquality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="50"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                   />

                <ImageView
                    android:id="@+id/imgvw_airqualityscale"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:padding="3dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_smile_good"
                    />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:background="@drawable/circle_shape"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:text="2"/>


                    <TextView
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="Tuesday" />

                </LinearLayout>

                <TextView
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_height="wrap_content"
                    android:text="Linz, 4040" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_thermometer"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="-10" />

                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_humidity"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="70" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="1dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />

            <LinearLayout
                android:background="@color/grey"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="100"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:padding="3dp"
                    android:src="@drawable/ic_smile_very_unhealthy"
                    />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:background="@drawable/circle_shape"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:text="1"/>


                    <TextView
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="Wednesday" />

                </LinearLayout>

                <TextView
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_height="wrap_content"
                    android:text="Linz, 4040" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_thermometer"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="10" />

                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_humidity"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_height="wrap_content"
                        android:text="80" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="1dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />

            <LinearLayout
                android:background="@color/lemonquince"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="80"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:padding="3dp"
                    android:src="@drawable/ic_smile_sensitive_unhealthy"
                    />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>